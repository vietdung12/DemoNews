@model News.ViewModel.Catalog.Register.CreateRegisterRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CreateRegisterRequest</h4>
